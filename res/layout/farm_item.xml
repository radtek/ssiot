<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/Margin"
    android:layout_marginRight="@dimen/Margin"
    android:layout_marginTop="@dimen/Margin18"
    android:background="@drawable/bg_green_seletor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@drawable/list_item_select2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewFarmName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="textViewFarmNameddd"
                        android:textColor="@color/c333333"
                        android:textSize="@dimen/itemTitle" />

                    <TextView
                        android:id="@+id/textViewBelog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Margin12"
                        android:layout_marginRight="@dimen/Margin12"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="textViewBelog_dddd"
                        android:textColor="@color/c999999"
                        android:textSize="@dimen/itemMiniContent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/new_farm_item_top" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:background="@drawable/ic_flag_gray"
                android:gravity="center"
                android:text="n"
                android:textColor="@color/white"
                android:textSize="@dimen/itemTitle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/Margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/MarginMini"
                android:text="已启动的设备"
                android:textColor="@color/c999999"
                android:textSize="@dimen/itemMiniContent" />

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:focusable="false"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/runLinearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/subTextSize"
                        android:gravity="right"
                        android:orientation="horizontal" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/divide_h" />

    <HorizontalScrollView
        android:id="@+id/placeHorizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:focusable="false"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/monitorLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

</LinearLayout>