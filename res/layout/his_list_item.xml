<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/his_itm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:text="品名" />
    
    <TextView
        android:id="@+id/his_itm_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/his_itm_name"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/grey"
        android:text="批次" />
    
    <ImageView 
        android:id="@+id/his_itm_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/qr_code"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:text="二维码"/>
    
    <TextView
        android:id="@+id/his_itm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/his_itm_batch"
        android:layout_toLeftOf="@id/his_itm_qr"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="日期" />

</RelativeLayout>