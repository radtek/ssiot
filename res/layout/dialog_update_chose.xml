<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/DarkGreen"
        android:text="@string/soft_update_title" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider"
        android:background="@drawable/divide_green" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:textSize="16.0dip"
        android:text="@string/soft_update_info" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider"
        android:background="@drawable/divide_ccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56.0dip" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/tra_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c999999"
            android:textSize="16.0dip" />

        <TextView
            android:layout_width="@dimen/divider"
            android:layout_height="fill_parent"
            android:background="@drawable/divide_v_ccc" />

        <Button
            android:id="@+id/buttonSure"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/tra_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/c333333"
            android:textSize="16.0dip" />
    </LinearLayout>

</LinearLayout>