<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/master_btn_white_pure"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ask_card_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:paddingBottom="10.0dip"
        android:paddingLeft="17.0dip"
        android:paddingRight="17.0dip"
        android:text="加载中"
        android:textColor="@color/master_text_color_1"
        android:textSize="@dimen/textsize_h2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="17.0dip" >

        <com.ssiot.fish.question.widget.CircleImageView
            android:id="@+id/question_detail_card_av"
            android:layout_width="@dimen/circle_av_size"
            android:layout_height="@dimen/circle_av_size"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/av_default_circle" />

        <TextView
            android:id="@+id/ask_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2015-01-01"
            android:textColor="@color/master_card_time_color"
            android:textSize="@dimen/textsize_h4" />

        <TextView
            android:id="@+id/question_detail_card_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@id/ask_card_time"
            android:layout_toRightOf="@id/question_detail_card_av"
            android:singleLine="true"
            android:text="农医生网友"
            android:textColor="@color/master_text_color_1"
            android:textSize="@dimen/textsize_h3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ask_card_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/master_red_color"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="删除"
            android:textColor="@color/master_white_color"
            android:textSize="@dimen/textsize_h4"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ask_card_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center|left"
        android:paddingBottom="10.0dip"
        android:paddingLeft="17.0dip"
        android:paddingRight="17.0dip"
        android:text="加载中"
        android:textColor="@color/master_text_color_2"
        android:textSize="@dimen/textsize_h3" />
    
<!-- <GridView -->
    <com.ssiot.fish.question.widget.PicModelGridView
        android:id="@+id/ask_card_pic"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:numColumns="3"
        android:columnWidth="10dp"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
         />
<!--     xmlns:imagewall="http://schemas.android.com/apk/res-auto" -->
<!--     imagewall:fixed="true" -->
<!--         imagewall:one_size="120.0dip" -->
<!--         imagewall:space_size="5.0dip" -->
<!--         imagewall:three_size="80.0dip" -->
<!--         imagewall:two_size="80.0dip" -->

    <TextView
        android:id="@+id/ask_card_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:drawableLeft="@drawable/icon_card_lbs"
        android:drawablePadding="6.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="无地址信息"
        android:textColor="@color/master_text_color_blue"
        android:textSize="@dimen/textsize_h4" />

    <RelativeLayout
        android:id="@+id/ask_card_crop_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ask_card_crop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="17.0dip"
            android:paddingLeft="17.0dip"
            android:text="作物名称："
            android:textColor="@color/master_text_color_1"
            android:textSize="@dimen/textsize_h2" />

        <TextView
            android:id="@+id/ask_card_crop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ask_card_crop_label"
            android:paddingBottom="17.0dip"
            android:paddingRight="17.0dip"
            android:paddingTop="2.0dip"
            android:text="暂无"
            android:textColor="@color/master_text_color_1"
            android:textSize="@dimen/textsize_h3" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/master_card_line_color" />

</LinearLayout>