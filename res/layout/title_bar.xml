<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/DarkGreen" >

    <View
        android:id="@+id/translate_header"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip" />

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:layout_below="@id/translate_header"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="80.0dip"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/master_white_color"
        android:textSize="@dimen/textsize_h0" />

    <TextView
        android:id="@+id/title_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/translate_header"
        android:gravity="center"
        android:paddingLeft="9.0dip"
        android:text="返回"
        android:textColor="@color/master_white_color"
        android:textSize="@dimen/textsize_h1" />

    <TextView
        android:id="@+id/title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/translate_header"
        android:layout_marginRight="9.0dip"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/master_white_color"
        android:textSize="@dimen/textsize_h1" />

    <RelativeLayout
        android:id="@+id/title_bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/translate_header"
        android:paddingLeft="30.0dip"
        android:paddingRight="9.0dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/title_bar_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_title_menu" />
    </RelativeLayout>

</RelativeLayout>