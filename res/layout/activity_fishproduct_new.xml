<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<include
        android:id="@+id/title_fishnew"
        layout="@layout/title_bar" />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:shrinkColumns="0" >
        
        <TableRow
            android:id="@+id/row_name"
            style="@style/setItemBgClickBg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/subMenuHeight"
            android:onClick="ClickFunc" >

            <TextView
                android:id="@+id/product_name"
                style="@style/ItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="产品名称:" />
            
            <EditText
                android:id="@+id/edit_name"
                style="@style/ItemTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入产品名称" />

        </TableRow>
        
        <TableRow
            android:id="@+id/row_amount"
            style="@style/setItemTopClickBg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/subMenuHeight"
            android:layout_marginTop="@dimen/Margin"
            android:onClick="ClickFunc" >
            
            <TextView
                android:id="@+id/text_amount"
                style="@style/ItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="数量:" />

            <EditText
                android:id="@+id/edit_amount"
                style="@style/ItemTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="输入数量，带单位" />
        </TableRow>
        
        <TableRow
            android:id="@+id/row_area"
            style="@style/setItemBottomClickBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subMenuHeight"
            android:onClick="ClickFunc" >

            
            <TextView
                android:id="@+id/product_area"
                style="@style/ItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="区域:" />
            
            <EditText
                android:id="@+id/edit_area"
                style="@style/ItemTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入使用区域" />
        </TableRow>
        
        <TableRow
            android:id="@+id/row_detail"
            style="@style/setItemBgClickBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subMenuHeight"
            android:layout_marginTop="@dimen/Margin"
            android:onClick="ClickFunc" >

            <EditText
                android:id="@+id/edit_detail"
                style="@style/ItemTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:layout_span="2"
                android:lines="4"
                android:gravity="top"
                android:hint="请输入详细信息" />
        </TableRow>
        
        <TableRow
            android:id="@+id/row_worker"
            style="@style/setItemBgClickBg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/subMenuHeight"
            android:layout_marginTop="@dimen/Margin"
            android:onClick="ClickFunc" >

            <TextView
                android:id="@+id/txt_worker"
                style="@style/ItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="相关人员:" />
            
            <EditText 
                android:id="@+id/edit_worker"
                style="@style/ItemTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入人员信息"
                />
        </TableRow>
        
        <TableRow
            android:id="@+id/row_time"
            style="@style/setItemBgClickBg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/subMenuHeight"
            android:layout_marginTop="@dimen/Margin"
            android:onClick="ClickFunc" >

            <TextView
                android:id="@+id/txt_time"
                style="@style/ItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_span="2"
                android:text="时间:" />
        </TableRow>
    </TableLayout>

</LinearLayout>