<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ssiot="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
<!--         <item name="actionbar:background">#D01839</item> -->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/abc_ab_solid_dark_holo</item>
<!--         <item name="backgroundStacked">@drawable/tab_bg</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="loading_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
<!--         <item name="android:windowBackground">@drawable/loading_bg</item>   -->
		<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="top_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:drawablePadding">0dip</item>
        <item name="android:background">@drawable/radio_monitor_select</item>
        <item name="android:textColor">@color/radiobutton_select</item>
        <item name="android:button">@null</item>
    </style>

    <style name="diagnose_icon">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lines">1</item>
    </style>

    <style name="his_title_bar_style">
        <item name="android:textColor">@color/his_title_green</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    
    <style name="his_archives_icon_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/his_title_green</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
<!--         <item name="android:paddingLeft">15dp</item> -->
<!--         <item name="android:paddingRight">15dp</item> -->
    </style>
    
    <style name="ModePopupList" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/expand</item>
        <item name="android:windowExitAnimation">@anim/shrink</item>
    </style>
    
    
    
    
<!--     copy from huiyun -->
    <style name="tcagri_farm_detail_tab_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/news_txt_white_seletor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="SetTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ff777777</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="SetTitleTextColor">
        <item name="android:textSize">@dimen/itemContent</item>
        <item name="android:textColor">@color/otherSubTextColor</item>
    </style>
	<style name="setItemTopClickBg">
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@drawable/bg_optionlist_top_select</item>
	    <item name="android:paddingLeft">16dp</item>
	    <item name="android:paddingTop">12dp</item>
	    <item name="android:paddingRight">16dp</item>
	    <item name="android:paddingBottom">12dp</item>
	    <item name="android:clickable">true</item>
	</style>
	
	<style name="ItemTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/itemTitle</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>
    
	<style name="SetContentText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/itemContent</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>
    
	<style name="setItemBottomClickBg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_optionlist_bottom_select</item>
        <item name="android:paddingLeft">@dimen/Margin</item>
        <item name="android:paddingTop">@dimen/Margin12</item>
        <item name="android:paddingRight">@dimen/Margin</item>
        <item name="android:paddingBottom">@dimen/Margin12</item>
        <item name="android:clickable">true</item>
    </style>
    
	<style name="setItemBg">
        <item name="android:background">@drawable/bg_radius10</item>
        <item name="android:paddingLeft">@dimen/Margin</item>
        <item name="android:paddingTop">@dimen/Margin12</item>
        <item name="android:paddingRight">@dimen/Margin</item>
        <item name="android:paddingBottom">@dimen/Margin12</item>
    </style>
    
	<style name="setItemBgClickBg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_optionlist_select</item>
        <item name="android:paddingLeft">@dimen/Margin</item>
        <item name="android:paddingRight">@dimen/Margin</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="FilterText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/msg_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/green_action_btn_select</item>
        <item name="android:paddingLeft">@dimen/msg_content</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">@dimen/msg_content</item>
        <item name="android:paddingBottom">5.0dip</item>
    </style>
    
    <style name="TitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/Margin18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
